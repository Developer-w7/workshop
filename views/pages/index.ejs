<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <link rel="stylesheet" type="text/css" href="/style/style.css">
    <title>Hello, world!</title>
  </head>
  <body class="bg">
    <div class="col-md-6 offset-sm-0 offset-md-3 offset-lg-3 fm" role="alert">
        <h1 class="text-center">STUDENT DATABASE</h1>
        <form action="/Register" method="POST" enctype="multipart/form-data">
          <input type="hidden" name="reg_number" value="<%= reg_no ? reg_no:"" %>">
         
            <div class="form-group">
                 <label for="exampleInputEmail1">Name</label>
                 <input type="text" value="<%= students != null ? students[0].name:"" %>"  name="name" required class="form-control" placeholder="Name" >
                       
            </div>
            <div class="form-group">
                <label for="exampleInputEmail1">Age</label>
                <input type="text" value="<%= students!= null ? students[0].age:"" %>" required class="form-control" name="age"  placeholder="Age">
                           
            </div>
            <div class="form-group">
                    <label for="exampleInputEmail1">Photo</label>
                    <input type="file"  required class="form-control" name="photo" placeholder="Profile Photo">
                               
                </div>
            <div class="form-group">
                    <label for="exampleInputEmail1">DOB</label>
                    <input type="date" value="<%= students!= null ? students[0].dob:"" %>" required class="form-control" name="dob" placeholder="Date of birth">
                               
            </div>
            <div class="form-group">
              <label for="exampleInputEmail1">Address</label>
              <input type="text" value="<%= students!= null ? students[0].address:"" %>" required  class="form-control" name="address" placeholder="Address">
                               
            </div>
            <div class="form-group">
              <label for="exampleInputEmail1">Email address</label>
              <input type="email" value="<%= students!= null ? students[0].email:"" %>" required class="form-control" name="email"  aria-describedby="emailHelp" placeholder="Enter email">
              <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
            </div>
         
            <div class="form-group">
                    <label for="exampleInputEmail1">Phone Number</label>
                    <input type="number" value="<%= students!= null ? students[0].phone:"" %>" required class="form-control" name="phone" placeholder="Phone Number">
                    <small id="emailHelp" class="form-text text-muted">We'll never share your number with anyone else.</small>
                  </div> 
                  <div class="form-group">
                        <label for="exampleInputEmail1">Course</label>
                        <input type="text" value="<%= students!= null ? students[0].course:"" %>" required class="form-control" name="course" placeholder="Course">
                       
                      </div>
                      <div class="row">
            <button type="submit" class="btn btn-info">Submit</button>
          </div>
          </form>
      </div>

    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
  </body>
</html>